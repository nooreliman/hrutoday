<div class="container forums">
  <h1>Forums</h1>
  <p>Pick one you would like to visit</p>
  <div class="forum-cards">
    <% @forums.each do |forum| %>
      <div class="card-category align-items-end pb-5" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= asset_path "forum-#{ forum.mood.name.downcase}.png" %>)">
        <%= link_to forum.mood.name.upcase, forum_posts_path(forum),  class: "forum-name ml-2" %>
      </div>
    <% end %>
  </div>
</div>
