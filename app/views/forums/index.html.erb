<div class="container">
  <h2>Forums</h2>
  <p>Which would you like to visit?</p>
  <div class="forum-cards">
    <% @forums.each do |forum| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= asset_path "forum-#{ forum.mood.name.downcase}.png" %>)">
        <%= link_to forum.mood.name.upcase, forum_posts_path(forum) %>
      </div> 
    <% end %>
  </div>
</div>
