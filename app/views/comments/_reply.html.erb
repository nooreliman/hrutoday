<div class="card ml-5 mt-1 py-4 flex-row align-items-center position-relative justify-content-end">

  <%# reply %>
  <div class="card-body reply-card text-right position-absolute mr-2">
    <%= reply.content %>
  </div>

  <%# delete %>
  <%= link_to icon("fas", "trash"), post_comment_path(@post, reply),
    method: :delete,
    data: { confirm: "Are you sure?" },
    class: "reply-delete-btn mr-1" %>

</div>
