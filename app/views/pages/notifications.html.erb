<div class="container mt-1">
  <h1>Updates</h1>
    <p>
      <% @comments.each do |comment| %>
        <div class="card notification mt-1 p-1">
          Posted By: <%= comment.user.username %>
          <br>
          <%= comment.content %>
          <br>
          <% time_passed = Time.now - comment.created_at %>
          <%= time_ago_in_words((time_passed/1.day)) %>
      </div>
      <% end %>
    </p>
</div>
