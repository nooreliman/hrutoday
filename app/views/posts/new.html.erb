<div class="container new-post">
  <h1>Create new post in</h1>
  <h3>#<%= @forum.mood.name %></h3>
</div>
<div class="container post-form py-3">
  <div class="row post-box mx-2 py-2">
      <div class="col mx-auto">
        <%= simple_form_for [@forum, @post] do |f| %>
          <%= f.input :title %>
          <%= f.input :content %>
          <%= f.submit "Create post", class: "btn btn-outline-dark" %>
        <% end %>
        <%= link_to "Cancel", forum_posts_path(@forum), class: "btn btn-outline-dark mt-1" %>
      </div>
  </div>

</div>
