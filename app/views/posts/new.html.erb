<div class="container">
  <h2>Create new post in</h2>
  <h3>#<%= @forum.mood.name %></h3>
</div>
<div class="row">
    <div class="col-sm-6 mx-auto">
      <%= simple_form_for [@forum, @post] do |f| %>
        <%= f.input :title %>
        <%= f.input :content %>
        <%= f.submit "Create post", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
  