<h2>You have <%= pluralize(@notifications.unread.count, "new notification") %></h2>
<% @notifications.each do |n| %>
  <div class="card notification mt-1 p-1" style="background-color: <%= n.to_notification.color %>;">
    <span>@<%= n.params[:comment].user.username %> commented on your post: <%= link_to n.params[:comment].post.title, post_path(n.params[:comment].post) %></span>
    <%= n.params[:comment].user.username %> commented: "<%= n.params[:comment].content %>"
    <br>
    <p><strong><%= time_ago_in_words(n.params[:comment].created_at) %> ago</strong></p>
  </div>
<% end %>

